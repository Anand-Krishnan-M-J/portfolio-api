        "chai": "^4.3.0",
        "chai-http": "^4.3.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "express-validator": "^6.9.2",
        "formidable": "^2.0.1",
        "googleapis": "^39.2.0",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.7.3",
        "pg-format": "^1.0.4",
        "pg-hstore": "^2.3.3",
        "pg-pool": "^2.0.3",
