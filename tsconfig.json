{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "outDir": "build",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "exclude": [
        "./tests/",
        "./node_modules/",
        "./dist/"
    ],
}